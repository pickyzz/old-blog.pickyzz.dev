{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "baseBranches": ["develop"],
  "packageRules": [
    {
      "updateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    }
  ],
  "ignoreDeps": ["next", "@next/bundle-analyzer", "eslint-config-next"],
  "schedule": [
    "before 1am"
  ],
  "timezone": "Asia/Bangkok"
}
