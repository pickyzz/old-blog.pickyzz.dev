{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "baseBranches": ["develop"],
  "minor": {
    "automerge": true
  },
  "patch": {
    "automerge": true
  },
  "pin": {
    "automerge": true
  },
  "lockFileMaintenance": {
    "automerge": true
  },
  "ignoreDeps": ["next", "@next/bundle-analyzer", "eslint-config-next", "react", "react-dom"],
  "schedule": [
    "before 1am"
  ],
  "timezone": "Asia/Bangkok"
}
